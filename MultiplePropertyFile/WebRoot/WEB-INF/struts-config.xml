<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="studentForm" type="com.vcs.struts.form.StudentForm" />

  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
    <action
      input="/student.jsp"
      name="studentForm"
      path="/student"
      type="com.vcs.struts.action.StudentAction">
      <forward name="success" path="/success.jsp" />
    </action>

  </action-mappings>

  <message-resources parameter="com.vcs.struts.ApplicationResources" key="floor" />
  <message-resources parameter="com.vcs.struts.ApplicationResources2" key="zone"/>
</struts-config>

